<!DOCTYPE html>
<html>
<head>
    <title>Telemedicine Website</title>
    <!-- Add your CSS files here -->
</head>
<body>
    <header>
        <h1>Welcome to our Telemedicine Website!</h1>
    </header>


<!-- doctor registration   -->
   <form action="{{ url_for('doctor.register_doctor') }}" method="post">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required>
        <br>

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>
        <br>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
        <br>

        <label for="phone">Phone:</label>
        <input type="tel" id="phone" name="phone" required>
        <br>

        <label for="first_name">First Name:</label>
        <input type="text" id="first_name" name="first_name" required>
        <br>

        <label for="last_name">Last Name:</label>
        <input type="text" id="last_name" name="last_name" required>
        <br>

        <label for="date_of_birth">Date of Birth:</label>
        <input type="date" id="date_of_birth" name="date_of_birth" required>
        <br>

        <label for="gender">Gender:</label>
        <select id="gender" name="gender" required>
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="other">Other</option>
        </select>
        <br>

        <label for="address">Address:</label>
        <input type="text" id="address" name="address" required>
        <br>

        <label for="specialization">Specialization:</label>
        <input type="text" id="specialization" name="specialization" required>
        <br>

        <label for="location">Location:</label>
        <input type="text" id="location" name="location" required>
        <br>

        <label for="availability">Availability:</label>
        <input type="text" id="availability" name="availability" required>
        <br>


        <button type="submit">Register</button>
        <br>
    </form>

<!-- show the doctor list   -->
    <h2>Doctor List</h2>
    <table>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Phone</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>Action</th>

        </tr>
        {% for doctor in doctors %}
            <tr>
                <td>{{ doctor.username }}</td>
                <td>{{ doctor.email }}</td>
                <td>{{ doctor.phone }}</td>
                <td>{{ doctor.first_name }}</td>
                <td>{{ doctor.last_name }}</td>
                <td>{{ doctor.date_of_birth }}</td>
                <td>
                    <a href="{{ url_for('doctor.delete_doctor', id=doctor.id) }}">Delete</a>
                    <a href="{{ url_for('doctor.update_doctor', id=doctor.id) }}">Update</a>
                </td>
            </tr>
        {% endfor %}

    <footer>
        <h2>Contact and Feedback</h2>
        <!-- Add your contact and feedback form here -->
    </footer>
</body>
</html>
